#include <stdio.h>
#include <string.h>
#include <stdlib.h>
#include <unistd.h>
#include <fcntl.h>
#include <termios.h>


int main(int argc, char *argv[]){
	int fd;
	int wr;
	char *buff;
	int ii;
	fd = open("/dev/ttyACM0", O_RDWR | O_NOCTTY | O_NDELAY);
	if(fd == -1){
		perror("Unable to open /dev/ttyACM0");
		return 1;
	}

	fcntl(fd, F_SETFL,0);
	printf("Port has been successfully opened and %d is the file description\n",fd);
	scanf("%d",&ii);	
	wr=write(fd,"1",1);
	
	return 0;
}



